{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "startCommand": "python3 bot.py"
    },
    "cacheClearCommand": "rm -rf /root/.cache/pip"
  },
  "deploy": {
    "startCommand": "python3 bot.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
